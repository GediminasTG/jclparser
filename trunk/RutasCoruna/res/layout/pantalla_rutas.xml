<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingTop="10px" >

        <TextView
            android:id="@+id/txPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:text="La Coruña modernista"
            android:textColor="#0073c0"
            android:textSize="20dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:text="Descripción de la ruta modernista"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingTop="10px" >

        <TextView
            android:id="@+id/txPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:text="El joven Picasso"
            android:textColor="#0073c0"
            android:textSize="20dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:text="Descripción de la ruta de Picasso"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingTop="10px" >
    </LinearLayout>
        
    
</LinearLayout>